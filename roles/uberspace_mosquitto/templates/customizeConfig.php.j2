$debug = false;
$remote = false;

if($debug){
  echo '<pre>';
}

$filename_otrc_output = "owntracks-config-{{ conventure_eventhandle }}.otrc";

if(!empty($_GET['tid-group']) && empty($_GET['tid-station'])){
  $tid=$_GET['tid-group'];
}
if(empty($_GET['tid-group']) && !empty($_GET['tid-station'])){
  $tid=$_GET['tid-station'];
